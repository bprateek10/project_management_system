= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "form-horizontal center project-validation" }) do |f|
  .container.user_details
    %h3= t "devise.invitations.edit.header"
    .card
      .card-body
        .row
          = f.hidden_field :invitation_token, readonly: true
          .col-md-12
            .form-group
              %label.pull-left
                = f.label :first_name
              = f.text_field :first_name, class: "form-control"
              .field-error.server-validation
                = show_error(f.object, :first_name)
          .col-md-12
            .form-group
              %label.pull-left
                = f.label :last_name
              = f.text_field :last_name, class: "form-control"
              .field-error.server-validation
                = show_error(f.object, :last_name)
          .col-md-12
            .form-group
              %label.pull-left
                = f.label :password
              = f.password_field :password, class: "form-control"
              .field-error.server-validation
                = show_error(f.object, :password)
          .col-md-12
            .form-group
              %label.pull-left
                = f.label :password_confirmation
              = f.password_field :password_confirmation, class: "form-control"
              .field-error.server-validation
                = show_error(f.object, :password_confirmation)
          %center
            .form-group
              .actions
                = f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-primary'

