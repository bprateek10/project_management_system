= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: "form-horizontal center project-validation" }) do |f|
  .container.user_details
    %h3= t "devise.invitations.new.header"
    .card
      .card-body
        .row
        - resource.class.invite_key_fields.each do |field| 
          .col-md-12
            .form-group
              %label.pull-left
                = f.label field
              = f.text_field field, class: "form-control"
              .field-error.server-validation
                = show_error(f.object, :resource)
          %center
            .form-group
              .actions
                = f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary'
